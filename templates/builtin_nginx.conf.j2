user {{ nginx_user|default(nginx_user_default) }};
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;
worker_processes {{ nginx_worker_processes }};

events {
  worker_connections {{ nginx_worker_connections }};
}

http {
  log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
  sendfile            on;
  tcp_nopush          on;
  tcp_nodelay         on;
  gzip                on;
  keepalive_timeout   {{ nginx_keepalive_timeout }};
  types_hash_max_size 2048;
  server_names_hash_bucket_size {{ nginx_server_names_hash_bucket_size }};

  include             {{ nginx_config_basepath }}/mime.types;
  default_type        application/octet-stream;

  include {{ nginx_config_basepath }}/tls_params;
  include {{ nginx_config_basepath }}/conf.d/*.conf;
  include {{ nginx_config_basepath }}/sites-enabled/*;
}
